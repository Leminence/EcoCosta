<div class="menu" id="menu">
    <%- include("menu") %>
</div>
<div>
<div class="corpo">
    <div class="perfil">
        <div class="perfilpfp">
            <div></div>
        </div>
        <div class="perfilinfo">
            <h1>Eco Costa</h1>
            <div>
                <h4>Total de posts: <%= postagens.length %></h4>
            </div>
        </div>
    </div>
    <div class="categorias">
        <h4>Categorias</h4>
        <div id="wrapper">
            <div id="innerwrapper">
                <button value="" id="mostrarfiltros" style="cursor: default; border-top-left-radius: 2vw;border-top-right-radius: 2vw;">
                    [ ]
                </button>
                <div style="display: flex; ">
                    <button id="abrirtags" style="background-color: rgb(100, 150, 100); border-bottom-left-radius: 2vw;">
                        Adicionar / Remover filtros
                    </button>  
                    <button onclick="zerarfiltros()" style="background-color: crimson; border-bottom-right-radius: 2vw;">
                        Remover todos os filtros
                    </button> 
                </div> 
            </div>
            
        </div>
        <div class="close" onclick="estadowrapper()">
            <h5 style="transform: rotate(90deg);" id="wrapperfechar">‚ü®</h5>
        </div>
    </div>
    <div class="postagens">
        <h4 id="gridbutton">Grade</h4>
        <h4 id="timelinebutton">Timeline</h4>
    </div>
    <div class="tamanhogrid">
        <text id="aumentargrid">+</text>
        <p id="gridtamanho">4</p>
        <text id="diminuirgrid">-</text>
    </div>
    <div class="gridpostagens" id="gridpost">
        <% for (const i of postagens) { %>
            <div class="miniaturapost" 
            data-id="<%= i.id %>" 
            data-autor="<%= i.autor %>"
            data-nome="<%= i.nome %>"
            data-especie="<%= i.especie %>"
            data-descricao="<%= i.descricao %>"
            data-imagem="<%= i.imagem %>"
            data-categorias="<%= i.categorias %>">

            </div>
        <% } %>
    </div>
</div>
</div>
<%- include('script') %>